<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">

      <% newTodo.forEach(function(item){ %>

        <form action="/delete" method="post">

          <div class="item">
            
            <input type="checkbox" name="checkbox" value=<%= item._id %> onChange = "this.form.submit()" ></input>
            <p><%= item.name %></p>

          </div>

          <input name="hiddenList" type="hidden" value=<%= listTitle %>></input>
        </form>
      
      <% }) %>

      <form class="item" action="/" method="POST">
        <input type="text" name="newTodo" placeholder="New Item" autocomplete="off"/>
        <button type="submit" name="list" value= <%= listTitle %> >+</button>
      </form>

    </div>

<%- include("footer") -%>